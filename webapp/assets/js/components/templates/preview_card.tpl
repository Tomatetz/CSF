<div class="person-preview">
    <div class="photo"><img src="http://mysite.na.novartis.net/User%20Photos/Profile%20Pictures/<%= fileName %>_<%= unique_id %>_MThumb.jpg" onerror="CSF.no_image_preview(this);" >
    </div>

    <div class="person-details">
<a target="_blank" href="http://mysite.na.novartis.net/profile/<%= profile %>"><%= firstname %> <%= lastname %></a>
<% if(workplace){ %>
    <div class="location"><%= site_name%> &middot; <%= workplace%></div>
<% } else { %>
    <div class="location"><%= site_name%></div>
<% } %>
<div class="email"><a href="mailto:<%= e_mail %>"><%= e_mail %></a></div>
<% if(phone){ %>
    <div class="phone"><%= phone%></div>
<% } else { %>
    <div class="phone unavailable">Phone number unavailable</div>
<% } %>

    </div>
</div>
