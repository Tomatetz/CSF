<div data-element="modal" data-backdrop="static" class="modal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3><%= title %></h3>
                <div class="row">
                    <div class="col-sm-8 col-sm-offset-4">
                        <div class="btn-group change-view" data-toggle="buttons">

                            <label class="btn btn-primary active">
                                <input type="radio" name="options" id="option1" checked> With project code
                            </label>
                            <label class="btn btn-primary">
                                <input type="radio" name="options" id="option2"> Without project code
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-body tab-content">
                <div class="tab-pane with_ptt active" id="project_with_ptt_region">
                </div>
                <div class="tab-pane without_ptt" id="project_without_ptt_region">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary js-submit"
                        data-loading-text='<%= dataLoadingText %>'><%= buttonTitle %></button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
