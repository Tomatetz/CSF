<div class="name-edit">
    <div class="input-group">
        <input type="text" class="form-control input-sm structureName"  onfocus="this.value = this.value;"
               value="<%= displayed_name %>">

        <div class="input-group-btn pull-left">
            <button type="button" class="btn btn-sm btn-primary"
                    data-action="save-name"
                    tabindex="-1" data-loading-text="Updating...">Save updates</button>
            <button type="button" class="btn btn-sm btn-default"
                    data-action="cancel-save-name"
                    tabindex="-1">Cancel</button>
        </div>
    </div>
</div>